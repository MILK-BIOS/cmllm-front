/* pages/test/test.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 110vh;
  width: 100%;
}

.chat-window {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #f5f5f5;
}

.chat-content {
  flex: 1;
  overflow-y: scroll;
}

.message {
  display: block;
  margin: 10rpx 0;
  padding: 10rpx;
  border-radius: 10rpx;
  max-width: 80%; 
  text-overflow:ellipsis;
  word-wrap:break-word;
  word-break: break-word; /* 支持单词内断行 */
}

.message.user {
  align-self: flex-end;
  background-color: #1aad19;
  color: white;
}

.message.bot {
  align-self: flex-start;
  background-color: #e5e5e5;
  color: black;
}

.input-area {
  width: 90%;
  height: 80rpx;
  display: flex;
  padding: 50rpx;
  background-color: white;
  border-top: 1px solid #ccc;
}

.input-box {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
}

.send-button {
  margin-left: 10rpx;
  padding: 0;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}