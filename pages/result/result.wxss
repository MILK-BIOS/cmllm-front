/* pages/result/result.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 90rpx;
}

.result-image {
  width: 100%;
  margin-bottom: 20rpx;
}

.result-text-scroll {
  width: 100%;
  height: 800rpx; /* 设置滚动区域的高度 */
  margin-bottom: 50rpx;
  background-color: #f5f5f5;
  border: 1px solid #ccc;
  border-radius: 5rpx;
}

.result-text {
  font-size: 16px;
  color: #333;
  padding: 10rpx;
}